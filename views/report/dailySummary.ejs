<!DOCTYPE html>
<html lang="en">
  <head>
    <% include ../partial/head %>
    <link rel="stylesheet" href="/stylesheets/dataTables.bootstrap5.css" />
  </head>
  <body>
    <!-- Start Homepage section-->
    <div class="wrapper">
      <!-- Sidebar -->
      <% include ../partial/sidebar %>
      <div class="main">
        <nav class="navbar navbar-expand px-3 border-bottom">
          <!--Button for sidebar toggle-->
          <button class="btn" type="button" data-bs-theme="dark">
            <span class="navbar-toggler-icon"></span>
          </button>
        </nav>
        <main class="content px-3 py-2">
          <div class="container-fluid">
            <div class="mb-3">
              <h1 class="mb-5">Daily Summary Report</h1>

              <table
                class="table table-bordered table-info display"
                id="example"
                style="width: 100%"
              >
                <thead>
                  <tr>
                    <th>No</th>
                    <th>Date</th>
                    <th>Total Quantity</th>
                    <th>Amount</th>
                  </tr>
                </thead>
                <tbody>
                  <% for(var i = 0; i < sales.length;i++){%>
                  <tr>
                    <td><%= i+ 1 %></td>
                    <td><%= sales[i]._id.date %></td>
                    <td><%= sales[i].quantity %></td>
                    <td>
                      <%= sales[i].amount + Math.floor(sales[i].amount/20) %>
                    </td>
                  </tr>
                  <%}%>
                </tbody>
              </table>
            </div>
          </div>
        </main>
      </div>
    </div>
  </body>
  <% include ../partial/script %>
  <script src="/javascripts/dataTables.js"></script>
  <script src="/javascripts/dataTables.bootstrap5.js"></script>
  <script>
    new DataTable("#example");
  </script>
</html>
